= content_for :title do
  = t('.title')

.row.justify-content-center
  .col-sm-6
    .card.text-center.mb-4
      .card-body
        = render 'form', url: session_path
        .card-text.mb-2
          small.text-muted = t('.description')
        = button_to t('.github'), auth_request_path, method: :post, class: 'btn btn-sm btn-outline-primary text-center'
